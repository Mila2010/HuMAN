<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_us_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66e7d2e7"
    android:onClick="removeContactUs">

    <RelativeLayout
        android:id="@+id/contact_us_form"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@color/colorGray"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <EditText
            android:id="@+id/subject_of_message"
            android:layout_alignParentTop="true"
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Type a Subject"/>

        <EditText
            android:id="@+id/message_to_send"
            android:layout_below="@id/subject_of_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type your Message"/>

        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Send"
            />
    </RelativeLayout>

</RelativeLayout>