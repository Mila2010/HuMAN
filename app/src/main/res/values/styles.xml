<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="tempStyle" parent="Base.Theme.AppCompat.CompactMenu">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorTemp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="valData" parent="Base.Theme.AppCompat.CompactMenu">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/otherinfo</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="HuMANTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightPink</item>
        <item name="colorPrimaryDark">@color/colorGray</item>
        <item name="colorAccent">@color/colorLightPink</item>
    </style>

    <style name="TestTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


</resources>
